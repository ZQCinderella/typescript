{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "strict": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "sourceMap": true,
  }
}
